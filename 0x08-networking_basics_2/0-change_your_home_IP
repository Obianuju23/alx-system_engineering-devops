i#!/usr/bin/env bash
#Bash script that configures an Ubuntu server with some given requirements

cp /etc/hosts ~/hosts.new
echo "127.0.0.2		localhost" > ~/hosts.new
echo "8.8.8.8.		facebook.com" >> ~/host.new
sed -i "s/^127.0.0.1\slocalhost/127.0.0.1 localhost\n127.0.0.2 localhost/g" ~/hosts.new
cp -f ~/hosts.new /etc/hosts
